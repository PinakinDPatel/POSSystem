            <Label Content="User Wise Sales Report" HorizontalAlignment="Center" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="28"/>
            <Grid Grid.ColumnSpan="2" Grid.Row="1" Margin="5" >
