            </Grid>
            <Grid Name="gSubCategory" Grid.Row="1" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.4*"/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Name="lblCategoryId" Visibility="Hidden"></Label>
                    <Label Name="hdnCategory" Visibility="Hidden"></Label>
                    
                    <Label Content="Sub Category :-"  VerticalAlignment="Bottom" FontSize="20" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtSubCate" FontSize="20" Grid.Row="1" Grid.Column="1" Margin="10,5,10,5">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="2" ShadowDepth="3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="ScanCode :" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="20" Grid.Column="2" />
                    <TextBox x:Name="txtItem" FontSize="20" Grid.Column="2" Grid.Row="2" Margin="10,5,10,5">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="2" ShadowDepth="3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Label Content="Image :-"  VerticalAlignment="Bottom" FontSize="20" Grid.Column="3" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txtSubCateImage" FontSize="20" Grid.Column="3" Grid.Row="2" Margin="10,5,10,5" GotFocus="txtSubCateImage_GotFocus">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="2" ShadowDepth="3"/>
                        </TextBox.Effect>
                    </TextBox>
                    <Button Name="btnDeptSave" Content="Save" Foreground="White" Grid.Column="4" Grid.Row="2" Background="#FF955912" Margin="5" FontSize="25" Click="btnSave_Click_Category"/>
                    <Button Name="btnCateDelete" Content="Delete" Foreground="White" Grid.Column="5" Grid.Row="2" Background="#FF955912" Margin="5" FontSize="25" Click="onDeleteCategory"/>
                </Grid>
                <UniformGrid Name="ugSubCategory" Grid.Row="1"></UniformGrid>
