<Window x:Class="POSSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen" WindowState="Maximized" d:DesignWidth="1374" d:DesignHeight="738"  >
    <Grid>
        <!--<Button Content="Button" HorizontalAlignment="Left" Margin="1325,685,0,0" VerticalAlignment="Top"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="84"></RowDefinition>
            <RowDefinition Height="384"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207"></ColumnDefinition>
            <ColumnDefinition Width="555*"></ColumnDefinition>
            <ColumnDefinition Width="604*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="Button"/>
            <Button Content="Button" Grid.Row="1"/>
            <Button Content="Button" Grid.Row="2"/>
            <Button Content="Button" Grid.Row="3"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="UserName" Grid.Column="1" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
            <Label Content="Transaction ID" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
            <Label Content="254862155" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="16"/>
            <Label Content="Patel1234" Grid.Column="1" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Barcode :-" Margin="0,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" FontFamily="Cambria" FontSize="16"/>
            <TextBox Grid.Column="1" Name="textBox1"  KeyDown="OnKeyDownHandler" HorizontalAlignment="Left" Height="29" Margin="0,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid  Name="JRDGrid" AutoGenerateColumns="False"  HorizontalAlignment="Center" Height="385" VerticalAlignment="Top" Width="555" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Scancode}"  Header="ScanCode" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding description}" Header="Description" MinWidth="155"  IsReadOnly="False" />
                    <DataGridTextColumn Binding="{Binding unitretail}" Header="Quantity" MinWidth="100"/>
                    <DataGridTextColumn Binding="{Binding Total}"  Header="Total" MinWidth="100"/>
                    <!--<DataGridTextColumn Binding="{Binding UnitReatil}" Header="Amount" MinWidth="100"/>-->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,-121">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Total" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="18"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Center" Width="80"/>
            <TextBox Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Center" Width="110" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" />
            <Label Content="Tax :-" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="18"  Grid.Column="1" Grid.Row="1"/>
            <TextBox Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Center" Width="110" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="1" />
            <Label Content="Grand-Total :-" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="18"  Grid.Column="1" Grid.Row="2" />
            <TextBox Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Center" Width="110" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="2" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="Button">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button Content="Button" Grid.Column="1"/>
            <Button Content="Button" Grid.Column="2"/>
            <Button Content="Button" Grid.Row="1"/>
            <Button Content="Button" Grid.Row="2"/>
            <Button Content="Button" Grid.Column="1" Grid.Row="1"/>
            <Button Content="Button" Grid.Column="1" Grid.Row="2"/>
            <Button Content="Button" Grid.Row="3"/>
            <Button Content="Button" Grid.Column="1" Grid.Row="3"/>
            <Button Content="Button" Grid.Column="2" Grid.Row="1"/>
            <Button Content="Button" Grid.Column="2" Grid.Row="2"/>
            <Button Content="Button" Grid.Column="2" Grid.Row="3"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,-121">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="LogOut" Grid.Column="1"  Grid.Row="1" FontFamily="Arial Black" FontSize="48"/>
        </Grid>
    </Grid>
</Window>
