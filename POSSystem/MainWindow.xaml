<Window x:Class="POSSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen" WindowState="Maximized" d:DesignWidth="1374" d:DesignHeight="738"  >
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <!--<Button Content="Button" HorizontalAlignment="Left" Margin="1325,685,0,0" VerticalAlignment="Top"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"></RowDefinition>
            <RowDefinition Height="210*"></RowDefinition>
            <RowDefinition Height="115*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"></ColumnDefinition>
            <ColumnDefinition Width="555*"></ColumnDefinition>
            <ColumnDefinition Width="604*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0"  Background="#FFF7F7F7">
            <Label Content="PSPCStore" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Engravers MT" FontSize="20" FontWeight="Bold" Background="Transparent">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="2"/>
                </Label.Effect>
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF6018C7" Offset="0"/>
                        <GradientStop Color="#FF5C34B2" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
        <UniformGrid Grid.Column="0" Grid.Row="2"  Name="sp02"  Background="#FFF7F7F7"></UniformGrid>
        <StackPanel Grid.Column="0" Grid.Row="2" Height="Auto" Name="cashTxtPanel" Visibility="Hidden">
            <Label Content="Cash-Receive" Name="lblCashReceive" HorizontalAlignment="Center" Margin="0,20" FontFamily="Arial Black" FontSize="18" />
            <TextBox Name="TxtCashReceive" GotFocus="textbox_GotFocus" Margin="10,-15,10,0" Height="41" FontSize="24" FontFamily="Arial Black" KeyDown="TxtCashReceive_KeyDown"/>
            <Label Content="Cash-Return" Name="lblCashReturn" HorizontalAlignment="Center" Margin="0,20" FontFamily="Arial Black" FontSize="18"/>
            <TextBox Name="TxtCashReturn" Margin="10,-15,10,0" Height="41" FontSize="24" TextAlignment="Center" FontFamily="Arial Black"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="2"  Height="Auto" Name="customerTxtPanel" Visibility="Hidden" >
            <Label Content="Select Customer" HorizontalAlignment="Center"></Label>
            <ComboBox SelectionChanged="ComboBox_SelectionChanged" Margin="5,5,5,5" Height="30" Name="cbcustomer" ItemsSource="{Binding Name}"></ComboBox>
            <Button Name="btnConform" Content="Conform" Margin="15" Click="btnConform_Click" Visibility="Hidden"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="2"  Height="Auto" Name="checkTxtPanel" Visibility="Hidden">
            <Label Content="Enter Check No."  HorizontalAlignment="Center"></Label>
            <TextBox KeyDown="TxtCheck_KeyDown" Margin="5,5,5,5" GotFocus="textbox_GotFocus" Height="30" Name="TxtCheck"></TextBox>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0" Background="#FFF7F7F7">
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="Cash" Margin="10,10,10,10" Foreground="White" FontSize="33" FontWeight="Bold" Click="Tender_Click"/>
            <Button Content="Card" Grid.Row="1" Margin="10,10,10,10" Foreground="White" FontSize="33" FontWeight="Bold" Click="Tender_Click"></Button>
            <Button Content="Customer" Grid.Row="2" Margin="10,10,10,10" Foreground="White" FontSize="33" FontWeight="Bold" Click="Tender_Click"/>
            <Button Content="Check" Grid.Row="3" Margin="10,10,10,10" Foreground="White" FontSize="33" FontWeight="Bold" Click="Tender_Click"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="1" Content="UserName" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <Label Content="Transaction ID" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <Label Grid.Row="1" Name="lblTranid"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Name="lblusername" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="81*" ></ColumnDefinition>
                <ColumnDefinition Width="104*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Barcode :-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <TextBox Name="textBox1" GotFocus="textbox_GotFocus"  KeyDown="OnKeyDownHandler" HorizontalAlignment="Center" Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" BorderBrush="Black" Grid.Row="1" />
            <Label Name="lblDate" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"  Grid.RowSpan="2"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid Name="JRDGrid" AutoGenerateColumns="False"  HorizontalAlignment="Center" VerticalAlignment="Top" CanUserAddRows="False" Background="White" CellEditEnding="JRDGrid_CellEditEnding">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Scancode}"  Header="ScanCode" Width="100*"  IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding description}" Header="Description" Width="155*"  IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding quantity}" Header="Quantity" Width="100*" IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding unitretail}"  Header="Price" Width="100*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" Width="100*" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding TaxRate}" Header="TaxRate" Visibility="Hidden" MinWidth="155"  IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Delete" Width="28">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Content="Delete" Click="JdGrid_delete_click" Command="Delete"/>-->
                                <Button Click="JdGrid_delete_click" Background="White" Width="30" Height="22">
                                        <Image Source="Image/Delete.png" Width="25" Height="23"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1"  Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="284*" ></ColumnDefinition>
                <ColumnDefinition Width="130*"></ColumnDefinition>
                <ColumnDefinition Width="141*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="58*"></RowDefinition>
                <RowDefinition Height="58*"></RowDefinition>
                <RowDefinition Height="58*"></RowDefinition>
                <RowDefinition Height="58*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Total :-" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Height="33" Width="69"/>
            <TextBox Name="txtQty" Grid.Column="1" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Focusable="False"/>
            <TextBox Name="txtTotal" Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Background="White" Focusable="False"/>
            <Label Content="Tax :-" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Height="33" Width="56" />
            <TextBox  Name="taxtTotal" Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="1"  Focusable="False"/>
            <Label Content="Grand-Total :-" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Height="33" Width="128" />
            <TextBox Name="grandTotal" Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="2"  Focusable="False"/>

            <Grid Grid.Column="0" Grid.RowSpan="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button Content="1" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="2" Grid.Column="1" Margin="5,5,5,5"  Click="NumButton_Click"></Button>
                <Button Content="3" Grid.Column="2" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="4" Grid.Column="0" Grid.Row="1" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="5" Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="6" Grid.Column="2" Grid.Row="1" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="7" Grid.Column="0" Grid.Row="2" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="8" Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="9" Grid.Column="2" Grid.Row="2" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="0" Grid.Column="0" Grid.Row="3" Margin="5,5,5,5" Click="NumButton_Click"></Button>
                <Button Content="Clear" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" Margin="5,5,5,5"></Button>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <UniformGrid Name="sp21" Grid.RowSpan="9" Background="#FFF7F7F7"></UniformGrid>
            <Grid Grid.Row="10" Background="#FFF7F7F7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Content="LogOut" Grid.Column="1" FontSize="33" FontWeight="Bold" Foreground="White" Margin="5,5,5,5" Click="Button_Click_2"></Button>
                <Button Content="Setting"  FontSize="33" FontWeight="Bold" Foreground="White" Margin="5,5,5,5" Click="Button_Click_3"></Button>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1" Visibility="Hidden" Name="TxtBxStackPanel2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Go Back" Grid.Column="4" Click="Button_Click_Go_Back" ></Button>
            <Label Name="lblDepartment" Grid.ColumnSpan="2" Grid.Row="2" Margin="5,5,5,5" FontSize="30" HorizontalAlignment="Right"></Label>
            <Label Name="lblTaxRate" Visibility="Hidden"/>
            <TextBox Name="txtDeptAmt" GotFocus="textbox_GotFocus" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5"  Text="{Binding LimitedDouble,StringFormat={}{0:00.00}}" FontSize="30"></TextBox>
            <Button Content="Save" Grid.Column="3" Grid.Row="2" Margin="5,5,5,5" Click="Button_Click_Sale_Save"></Button>
        </Grid>
    </Grid>
</Window>
