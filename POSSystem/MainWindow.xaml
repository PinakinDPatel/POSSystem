<Window x:Class="POSSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem"
        mc:Ignorable="d"  WindowStartupLocation="CenterScreen" WindowState="Maximized" d:DesignWidth="1374" d:DesignHeight="738"  >
    <Grid>
        <!--<Button Content="Button" HorizontalAlignment="Left" Margin="1325,685,0,0" VerticalAlignment="Top"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="84"></RowDefinition>
            <RowDefinition Height="384"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207"></ColumnDefinition>
            <ColumnDefinition Width="555*"></ColumnDefinition>
            <ColumnDefinition Width="604*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0"  Background="#FFF7F7F7">
            <Label Content="PSPCStore" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Engravers MT" FontSize="22" FontWeight="Bold" Background="Transparent">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF10FFE9" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
        <UniformGrid Grid.Column="0" Grid.Row="2" Margin="0,0,0,-121" Name="sp02"  Background="#FFF7F7F7"></UniformGrid>
        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,0,-121" Height="Auto" Name="cashTxtPanel" Visibility="Hidden">
            <Label Content="Cash-Receive" Name="lblCashReceive" HorizontalAlignment="Center" Margin="0,20" FontFamily="Arial Black" FontSize="18" />
            <TextBox Name="TxtCashReceive" Margin="10,-15,10,0" Height="41" FontSize="24" FontFamily="Arial Black"/>
            <Label Content="Cash-Return" Name="lblCashReturn" HorizontalAlignment="Center" Margin="0,20" FontFamily="Arial Black" FontSize="18"/>
            <TextBox Name="TxtCashReturn" Margin="10,-15,10,0" Height="41" FontSize="24" TextAlignment="Center" FontFamily="Arial Black"/>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition ></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="Cash" Margin="10,10,10,10" Foreground="White" FontFamily="Arial Black" FontSize="24" Click="Cash_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF802DF7" Offset="0"/>
                        <GradientStop Color="#FFE2D1F9" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="Card" Grid.Row="1" Margin="10,10,10,10" Foreground="White" FontFamily="Arial Black" FontSize="24">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF802DF7" Offset="0"/>
                        <GradientStop Color="#FFE2D1F9" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="Customer" Grid.Row="2" Margin="10,10,10,10" Foreground="White" FontFamily="Arial Black" FontSize="24">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF802DF7" Offset="0"/>
                        <GradientStop Color="#FFE2D1F9" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button Content="Cheque" Grid.Row="3" Margin="10,10,10,10" Foreground="White" FontFamily="Arial Black" FontSize="24">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF802DF7" Offset="0"/>
                        <GradientStop Color="#FFE2D1F9" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="UserName" Grid.Column="1" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
            <Label Content="Transaction ID" Margin="0,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Cambria" FontSize="16"/>
            <Label Content="254862155" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="16"/>
            <Label Content="Patel1234" Grid.Column="1" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="16"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="81*" ></ColumnDefinition>
                <ColumnDefinition Width="104*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Barcode :-" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="18" Height="29" Width="110" FontWeight="Bold"/>
            <TextBox Name="textBox1"  KeyDown="OnKeyDownHandler" HorizontalAlignment="Center" Height="29" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" BorderBrush="Black" Grid.Row="1"/>
            <Label Name="lblDate" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black" FontSize="18" Height="29" FontWeight="Bold" Grid.Column="1"  Grid.RowSpan="2"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DataGrid Name="JRDGrid" AutoGenerateColumns="False"  HorizontalAlignment="Center" Height="385" VerticalAlignment="Top" Width="555" CanUserAddRows="False" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Scancode}"  Header="ScanCode" MinWidth="100"  IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding description}" Header="Description" MinWidth="155"  IsReadOnly="True"/>
                    <DataGridTextColumn Binding="{Binding quantity}" Header="Quantity" MinWidth="100" IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding unitretail}"  Header="Price" MinWidth="100" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" MinWidth="100" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,-121" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256*" ></ColumnDefinition>
                <ColumnDefinition Width="158*"></ColumnDefinition>
                <ColumnDefinition Width="141*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="79*"></RowDefinition>
                <RowDefinition Height="43*"></RowDefinition>
                <RowDefinition Height="115*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Total :-" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="18" Grid.Column="1" Height="31" Width="78"/>
            <TextBox Name="txtQty" Grid.Column="1" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
            <TextBox Name="txtTotal" Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Background="White" />
            <Label Content="Tax :-" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="18"  Grid.Column="1" Grid.Row="1" Height="31" Width="64"/>
            <TextBox Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="1"  />
            <Label Content="Grand-Total :-" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Arial Black" FontSize="18" Grid.Row="2" Height="31" Width="143" Grid.Column="1" />
            <TextBox Grid.Column="2" HorizontalAlignment="Right" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" FontSize="22" FontFamily="Arial Black" TextAlignment="Right" Grid.Row="2"  />
        </Grid>

        <UniformGrid Grid.Column="2" Grid.Row="1" Name="sp21"></UniformGrid>
        <StackPanel Grid.Column="2" Grid.Row="1" Name="TxtBxStackPanel2" Height="auto" Visibility="Hidden">
            <Button Content="Go Back" Click="Button_Click_Go_Back" Margin="5,5,5,5"></Button>
            <Label Name="lblDepartment" Margin="5,5,5,5"></Label>
            <TextBox Name="txtDeptAmt" Margin="5,5,5,5"></TextBox>
            <Button Content="Save" Margin="5,5,5,5" Click="Button_Click_Sale_Save"></Button>
        </StackPanel>
        <Grid Grid.Row="2" Grid.Column="2" Margin="0,0,0,-121" Background="#FFF7F7F7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="176*" ></RowDefinition>
                <RowDefinition Height="61*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Content="LogOut" Grid.Column="1"  Grid.Row="1" FontFamily="Arial Black" FontSize="24" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFD1212" Offset="0"/>
                        <GradientStop Color="#FFFDD7D7" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Setting"  Grid.Row="1" FontFamily="Arial Black" FontSize="24" Foreground="White">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0C5F26" Offset="0"/>
                        <GradientStop Color="#FFCCFDCF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

        </Grid>
    </Grid>
</Window>
