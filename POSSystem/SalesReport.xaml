<Window x:Class="POSSystem.SalesReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem"
        mc:Ignorable="d"
        Title="SalesReport" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="From"/>
        <DatePicker Name="fromDate" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" SelectedDateChanged="from_SelectedDateChanged"  Grid.ColumnSpan="2" Width="200" Margin="40,1,356,13"/>

        <TextBlock Grid.Column="0" Grid.Row="1" Text="To"/>
        <DatePicker Name="toDate" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2" SelectedDateChanged="to_SelectedDateChanged" Width="200" Margin="40,34,354,18" Grid.RowSpan="2"/>


        <DataGrid Name="deprtDG" Grid.Row="2" Grid.RowSpan="8"/>
        <Label Name="amountTotal" Grid.Row="5"></Label>
        <TextBox Name="taxTotal"  Grid.Row="6"></TextBox>
        <Label Name="amountTaxTotal" Grid.Row="7"></Label>
        <DataGrid Name="cashDG" Grid.Row="2" Grid.Column="1" Grid.RowSpan="8"/>
        <Label Name="cashamountTotal" Grid.Row="7" Grid.Column="1"></Label>
    </Grid>
</Window>
