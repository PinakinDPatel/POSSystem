<Window x:Class="POSSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystem"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="#FFB8A8C7">
    <Border>
        <Grid>
            <TextBlock Height="23" HorizontalAlignment="Center" Margin="378,10,368,0" x:Name="LoginHeading" Text="Login:" VerticalAlignment="Top" FontSize="17" FontStretch="ExtraCondensed"/>
            <PasswordBox Height="23" HorizontalAlignment="Left" Margin="118,168,0,0" x:Name="passwordBox1" VerticalAlignment="Top" Width="247" RenderTransformOrigin="0.5,0.5" Background="White"/>
            <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="174,212,0,0" x:Name="button1" VerticalAlignment="Top" Width="104" Click="button1_Click" />
            <TextBlock Height="23" HorizontalAlignment="Left" x:Name ="errormessage" VerticalAlignment="Top" Width="247" Margin="118,253,0,0"  OpacityMask="Crimson" Foreground="#FFE5572C"  />

        </Grid>
    </Border>
</Window>
