<Window x:Class="POSSystem.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POSSystem"
      mc:Ignorable="d"
      Title="Account" ResizeMode="NoResize" WindowStyle="None" Height="554.873" Width="869.597" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="879" Margin="0,10,0,0">
            <Label Content="Account" HorizontalAlignment="Center" Margin="0,9,0,0" FontFamily="Arial Black" FontSize="36" Foreground="Black"/>
        </StackPanel>
        <Label Content="Account Name :-" HorizontalAlignment="Left" Margin="69,100,0,0" VerticalAlignment="Top" Foreground="#FF6549C7" FontFamily="Arial Black" FontSize="14"/>
        <TextBox HorizontalAlignment="Left" Name="txtaccount" Height="28" Margin="211,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="14">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
            </TextBox.Effect>
        </TextBox>
        <Label Content="Head :-" HorizontalAlignment="Left" Margin="142,149,0,0" VerticalAlignment="Top" Foreground="#FF6549C7" FontFamily="Arial Black" FontSize="14"/>
        <ComboBox Name="drphead" HorizontalAlignment="Left" Margin="211,152,0,0" VerticalAlignment="Top" Width="192" Height="28">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="Tender" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            <ComboBoxItem Content="Customers" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            <ComboBoxItem Content="Vendor" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            <ComboBoxItem Content="Expence" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            <ComboBoxItem Content="Income" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            <ComboBoxItem Content="Employee" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
        </ComboBox>
        <Label Content="Address :-" HorizontalAlignment="Left" Margin="119,197,0,0" VerticalAlignment="Top" Foreground="#FF6549C7" FontFamily="Arial Black" FontSize="14"/>
        <TextBox Name="txtAddress" HorizontalAlignment="Left" Height="28" Margin="211,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="14">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
            </TextBox.Effect>
        </TextBox>
        <Label Content="Mobile No. :-" HorizontalAlignment="Left" Margin="482,100,0,0" VerticalAlignment="Top" Foreground="#FF6549C7" FontFamily="Arial Black" FontSize="14"/>
        <TextBox Name="txtMobile" HorizontalAlignment="Left" Height="28" Margin="587,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="14">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
            </TextBox.Effect>
        </TextBox>
        <Label Content="Email :-" HorizontalAlignment="Left" Margin="520,149,0,0" VerticalAlignment="Top" Foreground="#FF6549C7" FontFamily="Arial Black" FontSize="14"/>
        <TextBox Name="txtEmail" HorizontalAlignment="Left" Height="28" Margin="587,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" FontSize="14">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
            </TextBox.Effect>
        </TextBox>
        <Button Content="Save" HorizontalAlignment="Left" Margin="482,197,0,0" VerticalAlignment="Top" Width="297" Height="28" Foreground="White" Click="Button_Click">
            <Button.Effect>
                <DropShadowEffect Color="#FFF6E5FF"/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA31FE0" Offset="0"/>
                    <GradientStop Color="#FF561B72" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid Name="dgAccount" HorizontalAlignment="Left"  AutoGenerateColumns="False"  Height="262" Margin="69,268,0,0" VerticalAlignment="Top"  Width="710" Background="#FFE8E8E8" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100" Binding="{Binding Name}"/>
               
                <DataGridTemplateColumn Header="Edit" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>


    </Grid>
</Window>
