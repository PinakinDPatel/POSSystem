<Window x:Class="POSSystem.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POSSystem"
      mc:Ignorable="d"
      Title="Account" ResizeMode="NoResize" WindowStyle="None" Height="554.873" Width="869.597" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="65*"></RowDefinition>
        </Grid.RowDefinitions>
            <Label Content="Account" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Content="Account Name :-" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14"/>
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Name="txtaccount" TextChanged="textBox_txtaccount" Height="32" Width="192" FontSize="14" Grid.Column="1">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
                </TextBox.Effect>
            </TextBox>
            <Label Content="Head :-" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Grid.Row="1"/>
            <Border Name="cmb1BorderHead" BorderThickness="1" HorizontalAlignment="Left"  Grid.Row="1" Margin="211,152,0,0" VerticalAlignment="Top" Width="192" Height="28">
            <ComboBox Name="drphead" HorizontalAlignment="Left" VerticalAlignment="Center" SelectionChanged="drphead_SelectionChanged" FontSize="14" Grid.Column="1" Grid.Row="1">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
                <ComboBoxItem Content="Tender" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
                <ComboBoxItem Content="Customers" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
                <ComboBoxItem Content="Vendor" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
                <ComboBoxItem Content="Expence" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
                <ComboBoxItem Content="Income" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
                <ComboBoxItem Content="Employee" HorizontalAlignment="Left" Width="190" FontFamily="Arial Black" Foreground="#FF6549C7"/>
            </ComboBox>
                </Border>
            <Label Content="Address :-" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="14" Grid.Row="2"/>
            <TextBox Name="txtAddress" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="textBox_txtAddress" Height="32" Width="192" FontSize="14" Grid.Column="1" Grid.Row="2">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
                </TextBox.Effect>
            </TextBox>
            <Label Content="Mobile No. :-" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="14" Grid.Row="0" Grid.Column="2"/>
            <TextBox Name="txtMobile" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="textBox_txtMobile" Height="32" Width="192" FontSize="14" Grid.Column="3" Grid.Row="0">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
                </TextBox.Effect>
            </TextBox>
            <Label Name="lblAccountId" Visibility="Hidden"></Label>
            <Label Content="Email :-" HorizontalAlignment="Right" VerticalAlignment="Center"  FontSize="14" Grid.Row="1" Grid.Column="2"/>
            <TextBox Name="txtEmail" HorizontalAlignment="Left" VerticalAlignment="Center" Height="32" Width="192" TextChanged="textBox_txtEmail" FontSize="14" Grid.Column="3" Grid.Row="1">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="2" ShadowDepth="3" Color="#FFD7C9F3"/>
                </TextBox.Effect>
            </TextBox>
            <Button Content="Save" Name="btnSave" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" Width="192" FontSize="14" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Click="Button_Click">
                
            </Button>
        </Grid>
       
        <DataGrid Name="dgAccount"  AutoGenerateColumns="False" Background="#FFE8E8E8" FontSize="14" Grid.Row="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="100*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Head" Width="100*" Binding="{Binding Head}"/>
                <DataGridTextColumn Header="Address" Width="100*" Binding="{Binding Address}"/>
                <DataGridTextColumn Header="Mobile" Width="100*" Binding="{Binding Mobile}"/>
                <DataGridTextColumn Header="Email" Width="100*" Binding="{Binding Email}"/>
                <DataGridTemplateColumn Header="Edit" Width="40*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="onEdit" Background="White">
                                <StackPanel Orientation="Horizontal" >
                                    <Image Source="Image/Edit1.png" Width="25" Height="25"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Delete" Width="40*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="onDelete" Background="White">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="Image/Delete.png" Width="25" Height="25"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>


    </Grid>
</Window>
